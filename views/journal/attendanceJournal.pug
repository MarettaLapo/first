extends ../head
block append scripts
    // подключаем скрипт
    script(src="/js/scriptAttendanceJournal.js")
block content
    div(class="col-md-5")
    a(href="/attendanceForStudentGroups" class="btn btn-success") Добавить отметки посещаемости
    div(class="form-group mb-3")
        select(name="student_group_id" id="student_group_id" class="form-select")
            each el in studentGroups
                option(value=el.id) #{el.name}
        div(class="form-group mb-3")
        input(name="subject_date" id="subject_date" type="date" placeholder="Дата занятий" required class="form-control")
        div(id="attendance_table_id")
        