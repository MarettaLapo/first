<% function rusdate(date) { %>
    <% if (!date || date == '') { return; }%>
    <% var c = date.split(' ')[0].split('-'); %>
    <% month = {
   	 '01': 'января',
   	 '02': 'февраля',
   	 '03': 'марта',
   	 '04': 'апреля',
   	 '05': 'мая',
   	 '06': 'июня',
   	 '07': 'июля',
   	 '08': 'августа',
   	 '09': 'сентября',
   	 '10': 'октября',
   	 '11': 'ноября',
   	 '12': 'декабря'
    } %>
    <%= c[2] %> <%= month[c[1]] %> <%= c[0] %> г.
<% } %>

